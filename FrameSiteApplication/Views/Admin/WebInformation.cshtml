@model FrameSiteApplication.Models.BasicInformation.ApplicationName

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "WebInformation";
    Layout = "/Views/Shared/_AdminMenu.cshtml";
}

<style>
    .accordion-item {
        padding: inherit;
        background-color: #aeb6bf;
        box-shadow: 1px 1px 3px rgb(128 128 128);
        margin-bottom: 10px;
    }


    .accordion-button::after {
        background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='%23333' xmlns='http://www.w3.org/2000/svg'%3e%3cpath fill-rule='evenodd' d='M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z' clip-rule='evenodd'/%3e%3c/svg%3e");
        transform: scale(.7);
    }

    .accordion-button:not(.collapsed)::after {
        background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='%23333' xmlns='http://www.w3.org/2000/svg'%3e%3cpath fill-rule='evenodd' d='M0 8a1 1 0 0 1 1-1h14a1 1 0 1 1 0 2H1a1 1 0 0 1-1-1z' clip-rule='evenodd'/%3e%3c/svg%3e");
    }

    .accordion-button {
        font-size: 20px;
    }

    label {
        font-size: 18px;
        color: black;
        padding-top: 20px;
    }

    .form-control {
        border: groove 1px black;
    }

    textArea {
        max-width: 60%;
    }

    #button, #button:focus {
        margin-top: -30px;
        float: right;
        margin-right: 10px;
        width: 15%;
        font-size: 18px;
        color: white;
        margin-bottom: 20px;
    }
</style>

<h2>Basic Information about website.</h2>

@using (Html.BeginForm("WebInformation", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="accordion" id="myAccordin">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button type="button" class="accordion-button collapsed" data-toggle="collapse" data-target="#collapseOne">
                    <b>Application Information</b>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#myAccordion">
                <div class="card-body">
                    <label>Applcation Logo:</label>
                    <input type="file" name="ImageData" id="ImageData" class="post-attachment" />
                    <label>Application Name:</label><br />
                    <input name="applicationName" type="text" class="form-control" value="" required />
                    <label>Application Discription:</label>
                    <textarea name="applicationDiscription" class="form-control" rows="5" id="textArea1"></textarea>
                    <input type="submit" value="Save" class="btn btn-info" id="button" />
                    <button class="btn btn-danger" type="button" id="button">Cancel</button>

                </div>
            </div>
        </div>

    </div>
}



<div class="accordion" id="myAccordin2">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button type="button" class="accordion-button collapsed" data-toggle="collapse" data-target="#collapseTwo">
                <b>Application Footer</b>
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#myAccordion2">
            <div class="container">
                <div class="row">
                    <div class="col-3">
                        <label>Owner Name:</label><br />
                        <input type="text" name="name" class="form-control" value="" required />
                        <label>Email Id:</label><br />
                        <input type="text" name="name" class="form-control" value="" required />
                        <label>Company Name:</label><br />
                        <input type="text" name="name" class="form-control" value="" required />
                    </div>
                    <div class="col-6">
                        <label>Contact No:</label><br />
                        <input type="text" name="name" class="form-control" value="" required />
                        <label>Address:</label>
                        <textarea name="discription" class="form-control" rows="5" id="textArea1"></textarea>
                        <button class="btn btn-info" type="submit" id="button">Submit</button>
                        <button class="btn btn-danger" type="button" id="button">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion" id="myAccordin2">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button type="button" class="accordion-button collapsed" data-toggle="collapse" data-target="#collapseThree">
                    <b>Design Dashboard</b>
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#myAccordion2">
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <label>Background Image 1:</label>
                            <input type="file" name="name" value="" /><br />
                            <label>Background Image 2:</label>
                            <input type="file" name="name" value="" /><br />

                            <label>Sample Image 2:</label>
                            <input type="file" name="name" value="" /><br />
                        </div>
                        <div class="col-4">
                            <label>Background Image 2:</label>
                            <input type="file" name="name" value="" /><br />
                            <label>Background Image 5:</label>
                            <input type="file" name="name" value="" /><br />
                            <label>Sample Image 3:</label>
                            <input type="file" name="name" value="" /><br />
                        </div>
                        <div class="col-4">
                            <label>Background Image 3:</label>
                            <input type="file" name="name" value="" /><br />
                            <label>Sample Image 1:</label>
                            <input type="file" name="name" value="" /><br />
                        </div>
                    </div>
                    <button class="btn btn-info" type="submit" id="button">Submit</button>
                    <button class="btn btn-danger" type="button" id="button">Cancel</button>
                </div>
            </div>
        </div>

    </div>
</div>


@{
    if (@TempData["Msg"] != null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}  